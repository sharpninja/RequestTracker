<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RequestTracker.ViewModels"
        xmlns:models="using:RequestTracker.Models"
        xmlns:conv="using:RequestTracker.Converters"
        xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        x:Class="RequestTracker.Views.ChatWindow"
        x:DataType="vm:ChatWindowViewModel"
        Title="AI Assistant"
        Width="500" Height="550"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/avalonia-logo.ico"
        FontSize="14">

    <Window.Resources>
        <conv:RoleToBrushConverter x:Key="RoleToBrush"/>
        <conv:RoleToVisibilityConverter x:Key="RoleToVisibility"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:ChatWindowViewModel/>
    </Design.DataContext>

    <Grid x:Name="ChatMainGrid">
        <Border Grid.Row="0" Background="#f0f0f0" Padding="8,6" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                <TextBlock Grid.Column="0" Text="Model:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="14"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableModels}" SelectedItem="{Binding SelectedModel}"
                          MinWidth="180" HorizontalAlignment="Left" FontSize="14"/>
                <Button Grid.Column="2" Command="{Binding OpenAgentConfigCommand}" Margin="8,0,0,0" ToolTip.Tip="Open agent config in default editor">
                    <TextBlock Text="Agent config" FontSize="12"/>
                </Button>
                <Button Grid.Column="3" Command="{Binding OpenPromptTemplatesCommand}" Margin="4,0,0,0" ToolTip.Tip="Open prompt templates in default editor">
                    <TextBlock Text="Prompts" FontSize="12"/>
                </Button>
            </Grid>
        </Border>
        <Expander Grid.Row="1" x:Name="PromptTemplatesExpander" Header="Prompt templates" IsExpanded="True"
                  HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                  Background="#fafafa" Padding="8,6" BorderBrush="#eee" BorderThickness="0,0,0,1"
                  MinHeight="40"
                  Expanded="OnPromptTemplatesExpanded" Collapsed="OnPromptTemplatesCollapsed">
            <Grid RowDefinitions="Auto, *">
                <TextBlock Grid.Row="0" Text="Click to fill input, double-click to send." FontSize="12" Foreground="Gray" Margin="0,0,0,4"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding PromptTemplates}" Margin="0" Padding="0"
                         Tapped="OnPromptListTapped" DoubleTapped="OnPromptListDoubleTapped">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:PromptTemplate">
                            <TextBlock Text="{Binding Name}" FontSize="14" Padding="2,0"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Expander>
        <GridSplitter Grid.Row="2" x:Name="ChatTemplateSplitter" ResizeDirection="Rows" Background="LightGray" Height="4" PointerReleased="OnChatSplitterPointerReleased"/>
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                      Margin="8" x:Name="MessageScroll">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:ChatMessage">
                        <Border Margin="0,4" Padding="10,8" CornerRadius="4"
                                Background="{Binding Role, Converter={StaticResource RoleToBrush}}">
                            <StackPanel Spacing="4">
                                <TextBlock FontWeight="SemiBold" FontSize="14" Foreground="Gray"
                                           Text="{Binding Role}"/>
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="16"
                                           IsVisible="{Binding Role, Converter={StaticResource RoleToVisibility}, ConverterParameter=user}"/>
                                <md:MarkdownScrollViewer Markdown="{Binding Text}" Margin="0"
                                           IsVisible="{Binding Role, Converter={StaticResource RoleToVisibility}, ConverterParameter=assistant}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Border Grid.Row="4" Background="#f0f0f0" Padding="8" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding CurrentInput}" Watermark="Ask about your logs..."
                         MinHeight="36" Margin="0,0,8,0" KeyDown="OnInputKeyDown" FontSize="14"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Send" Command="{Binding SendCommand}"
                        IsEnabled="{Binding !IsLoading}" MinWidth="70" FontSize="14"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" IsVisible="{Binding IsLoading}"
                           Text="Thinkingâ€¦" Foreground="Gray" FontSize="14" Margin="0,4,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
