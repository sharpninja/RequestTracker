<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:RequestTracker.Models.Json"
             xmlns:conv="clr-namespace:RequestTracker.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RequestTracker.Views.RequestDetailsView"
             x:DataType="models:UnifiedRequestEntry">

  <UserControl.Resources>
      <conv:ObjectToJsonConverter x:Key="ObjectToJson"/>
      <conv:CountToVisibilityConverter x:Key="CountToVisibility"/>
  </UserControl.Resources>

  <ScrollViewer>
    <StackPanel Spacing="10" Margin="10">
      <!-- Header -->
      <Grid ColumnDefinitions="*, Auto">
        <StackPanel Grid.Column="0">
          <SelectableTextBlock Text="{Binding QueryTitle}" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" />
          <SelectableTextBlock Text="{Binding RequestId}" FontSize="14" Foreground="Gray" />
        </StackPanel>
        <SelectableTextBlock Grid.Column="1" Text="{Binding TimestampLocalDisplay}" FontSize="14" Foreground="Gray" />
      </Grid>

      <!-- Metadata Badges -->
      <WrapPanel Orientation="Horizontal">
        <WrapPanel.Styles>
          <Style Selector="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
          </Style>
          <Style Selector="SelectableTextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
          </Style>
        </WrapPanel.Styles>

        <Border><SelectableTextBlock Text="{Binding Model}" /></Border>
        <Border IsVisible="{Binding ModelProvider, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <SelectableTextBlock Text="{Binding ModelProvider}" />
        </Border>
        <Border IsVisible="{Binding Status, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <SelectableTextBlock Text="{Binding Status}" />
        </Border>
        <Border><SelectableTextBlock Text="{Binding TokenCount, StringFormat='Tokens: {0}'}" /></Border>
        <Border IsVisible="{Binding IsPremium}"><SelectableTextBlock Text="Premium" Foreground="DarkGoldenrod"/></Border>
        <Border IsVisible="{Binding Score, Converter={x:Static ObjectConverters.IsNotNull}}">
            <SelectableTextBlock Text="{Binding Score, StringFormat='Score: {0}'}" />
        </Border>
      </WrapPanel>

      <Separator />

      <!-- Query -->
      <Expander Header="Query" IsExpanded="True">
        <Border BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10" Background="#FAFAFA">
          <SelectableTextBlock Text="{Binding QueryText}" TextWrapping="Wrap" FontFamily="Consolas, Monospace" Foreground="Black" />
        </Border>
      </Expander>

      <!-- Response -->
      <Expander Header="Response" IsExpanded="True">
        <Border BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10" Background="#FAFAFA">
          <SelectableTextBlock Text="{Binding Response}" TextWrapping="Wrap" FontFamily="Consolas, Monospace" Foreground="Black" />
        </Border>
      </Expander>

      <!-- Interpretation (if present) -->
      <Expander Header="Interpretation" IsExpanded="True" IsVisible="{Binding Interpretation, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
        <Border BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10" Background="#F0F8FF">
          <SelectableTextBlock Text="{Binding Interpretation}" TextWrapping="Wrap" FontFamily="Segoe UI, Sans-Serif" Foreground="Black" />
        </Border>
      </Expander>

      <!-- Actions: always show section; grid when there are items, empty-state message when none -->
      <StackPanel>
          <TextBlock Text="{Binding Actions.Count, StringFormat='Actions ({0})'}" FontWeight="SemiBold" Margin="0,10,0,4"/>
          <Border BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Background="White" Padding="12" MinHeight="80">
              <Grid>
                  <TextBlock Text="No actions recorded." Foreground="Gray" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"
                             IsVisible="{Binding Actions, Converter={StaticResource CountToVisibility}, ConverterParameter='Invert'}"/>
                  <StackPanel IsVisible="{Binding Actions, Converter={StaticResource CountToVisibility}}">
                      <Border BorderBrush="#C0C0C0" BorderThickness="0,0,0,1" Padding="0,0,0,4" Margin="0,0,0,6">
                          <Grid ColumnDefinitions="40,100,*,90,120">
                              <TextBlock Grid.Column="0" Text="#" FontFamily="Consolas, Monospace" FontSize="14" FontWeight="SemiBold"/>
                              <TextBlock Grid.Column="1" Text="Type" FontFamily="Consolas, Monospace" FontSize="14" FontWeight="SemiBold"/>
                              <TextBlock Grid.Column="2" Text="Description" FontFamily="Consolas, Monospace" FontSize="14" FontWeight="SemiBold" Margin="4,0"/>
                              <TextBlock Grid.Column="3" Text="Status" FontFamily="Consolas, Monospace" FontSize="14" FontWeight="SemiBold"/>
                              <TextBlock Grid.Column="4" Text="File Path" FontFamily="Consolas, Monospace" FontSize="14" FontWeight="SemiBold"/>
                          </Grid>
                      </Border>
                      <ItemsControl ItemsSource="{Binding Actions}">
                          <ItemsControl.ItemsPanel>
                              <ItemsPanelTemplate>
                                  <StackPanel Spacing="4"/>
                              </ItemsPanelTemplate>
                          </ItemsControl.ItemsPanel>
                          <ItemsControl.ItemTemplate>
                              <DataTemplate DataType="models:UnifiedAction">
                                  <Border BorderBrush="#C0C0C0" BorderThickness="0,0,0,1">
                                      <Grid ColumnDefinitions="40,100,*,90,120">
                                          <SelectableTextBlock Grid.Column="0" Text="{Binding Order}" FontFamily="Consolas, Monospace" FontSize="14"/>
                                          <SelectableTextBlock Grid.Column="1" Text="{Binding Type}" FontFamily="Consolas, Monospace" FontSize="14" TextWrapping="Wrap"/>
                                          <SelectableTextBlock Grid.Column="2" Text="{Binding Description}" FontFamily="Consolas, Monospace" FontSize="14" TextWrapping="Wrap" Margin="4,0"/>
                                          <SelectableTextBlock Grid.Column="3" Text="{Binding Status}" FontFamily="Consolas, Monospace" FontSize="14"/>
                                          <SelectableTextBlock Grid.Column="4" Text="{Binding FilePath}" FontFamily="Consolas, Monospace" FontSize="14" TextWrapping="Wrap"/>
                                      </Grid>
                                  </Border>
                              </DataTemplate>
                          </ItemsControl.ItemTemplate>
                      </ItemsControl>
                  </StackPanel>
              </Grid>
          </Border>
      </StackPanel>

      <!-- Context -->
      <Expander Header="Context">
        <ItemsControl ItemsSource="{Binding ContextList}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <SelectableTextBlock Text="{Binding}" Margin="0,2" FontSize="14" TextWrapping="Wrap"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Expander>

      <!-- Tags/Notes -->
      <Expander Header="Tags &amp; Notes" IsExpanded="True">
        <StackPanel Spacing="5">
            <SelectableTextBlock Text="{Binding FailureNote, StringFormat='Failure Note: {0}'}"
                       IsVisible="{Binding FailureNote, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                       Foreground="Red"/>

            <ItemsControl ItemsSource="{Binding Tags}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <StackPanel Spacing="5" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                   <SelectableTextBlock Text="{Binding}" FontSize="14" TextWrapping="Wrap" Margin="0,2"/>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
      </Expander>

      <!-- Original JSON -->
      <Expander Header="Original JSON">
          <Border BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="4" Padding="10" Background="#FAFAFA">
            <SelectableTextBlock Text="{Binding OriginalEntry, Converter={StaticResource ObjectToJson}}"
                               TextWrapping="Wrap" FontFamily="Consolas, Monospace" Foreground="Black" />
          </Border>
      </Expander>

    </StackPanel>
  </ScrollViewer>
</UserControl>
